<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    tools:context=".Login_activity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/log"
        android:layout_marginTop="130dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:textColorHint="#fff"
        android:layout_marginHorizontal="30dp"
        android:hint="User Name"
        android:padding="5dp"
        app:startIconContentDescription="Insert your User Name"
        app:startIconDrawable="@drawable/people">




        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ret"

            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/idPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idEmail"
        android:hint="Insert your password"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColorHint="#fff"
        android:padding="5dp"
        app:endIconMode="password_toggle"
        app:startIconContentDescription="Password"
        app:startIconDrawable="@drawable/baseline_key">




        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ret"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:textColor="#fff"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:background="@drawable/ret"
            android:layout_marginRight="35dp"
            android:text="Sign in"
            />
        <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
            android:background="none"
            android:text="Forget password?"
            android:textSize="10sp"
        />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="50dp"
        android:layout_marginTop="80dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/sig"
            android:gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="Don't have account?"
            android:id="@+id/acc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/sigu"
            android:layout_below="@+id/acc"


            />
        </LinearLayout>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_arrow_forward"
            android:layout_toRightOf="@+id/sig"/>


    </RelativeLayout>

</LinearLayout>